{
  "name": "clean-node-api",
  "version": "2.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "start": "node ./dist/main/server.js",
    "build": "rimraf dist && tsc",
    "up": "npm run build && docker-compose up ",
    "down": "docker-compose down",
    "debug": "nodemon -L --watch ./dist --inspect=0.0.0.0:9222 --nolazy ./dist/main/server.js",
    "lint": "eslint . --ext .ts",
    "test": "jest --detectOpenHandles --passWithNoTests --silent --noStackTrace --runInBand --forceExit",
    "test:verbose": "jest --passWithNoTests --runInBand --forceExit --detectOpenHandles",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- -o",
    "test:ci": "npm test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "check": "npm-check -s -u"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "@types/bcrypt": "^3.0.0",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.15",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mongodb": "^3.5.33",
    "@types/node": "^14.14.6",
    "@types/pg": "^7.14.6",
    "@types/supertest": "^2.0.10",
    "@types/validator": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "coveralls": "^3.1.0",
    "eslint": "^7.12.1",
    "eslint-config-standard-with-typescript": "^19.0.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.2",
    "git-commit-msg-linter": "^3.0.0",
    "husky": "^4.3.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "mockdate": "^3.0.2",
    "node-ts": "^5.1.1",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts": "^0.2.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.3",
    "nodemon": "^2.0.6",
    "pg": "^8.4.2",
    "validator": "^13.1.17"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci"
    }
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix"
  },
  "engines": {
    "node": "12.x"
  }
}
